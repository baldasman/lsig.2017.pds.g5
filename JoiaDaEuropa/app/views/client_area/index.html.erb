<h1>ClientArea#index</h1>
<p>Find me in app/views/client_area/index.html.erb</p>
<div class="container">
  <h2>My Orders</h2>
  <div class="actions" align="right">
    <%= link_to '<button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> New Order</button>'.html_safe, client_area_new_order_path %>
  </div>
  <ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#home">All Orders</a></li>
    <li><a data-toggle="tab" href="#menu1">Pending Orders</a></li>
    <li><a data-toggle="tab" href="#menu2">Orders Canceled</a></li>
    <li><a data-toggle="tab" href="#menu3">Completed Orders</a></li>
  </ul>

  <div class="tab-content">
    <div id="home" class="tab-pane fade in active">
      <h3>Orders Made</h3>
      <div class="container">
        <!--p>The .table-responsive class creates a responsive table which will scroll horizontally on small devices (under 768px). When viewing on anything larger than 768px wide, there is no difference:</p-->
        <div class="table-responsive">
          <table class="table">
            <thead>
            <tr>
              <th>#</th>
              <th>Firstname</th>
              <th>Lastname</th>
              <th>Age</th>
              <th>City</th>
              <th>Country</th>
            </tr>
            </thead>
            <tbody>
            <% @order.each do |order| %>
                <tr>
                  <td><%=h order.id %></td>
                  <td><%=h order.delivery_date %></td>
                  <td><%=h order.price %></td>
                  <td><%=h order.obs %></td>
                  <td><%=h order.order_state_id  %>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
